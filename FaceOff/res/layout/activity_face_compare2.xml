<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.faceoff.FaceCompare2"
    android:background="@drawable/compare_2_background" >
 
     <TextView
        android:id="@+id/results"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Results"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#ff8330"
        android:textSize="50dp" />
 
    <TextView
        android:id="@+id/score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/results"
        android:text="Score:"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="35dp"
        android:textColor="#ffffff"/>
 
    <ImageButton
        android:id="@+id/Quit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/another_round_button"
        android:layout_below="@+id/another_round_button"
        android:background="@android:color/transparent"
        android:onClick="activity_player2_offense"
        android:src="@drawable/quit_button" />
 
    <ImageButton
        android:id="@+id/another_round_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="@android:color/transparent"
        android:src="@drawable/another_round_button" />
 
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/results"
        android:src="@android:drawable/ic_menu_gallery" />
 
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="210dp"
        android:layout_above="@+id/another_round_button"
        android:layout_toLeftOf="@+id/results"
        android:src="@android:drawable/ic_menu_gallery" />
 
</RelativeLayout>