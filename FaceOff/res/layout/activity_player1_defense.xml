<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Player1Defense"
    android:background="@drawable/player_defense_background">
 
    <TextView
        android:id="@+id/player_1_defense"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="Player 1 Defense"
        android:textSize="40dp"
        android:textColor="#ffffff" />
 
    <ImageButton
        android:id="@+id/submit_defense_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="@android:color/transparent"
        android:onClick="cameraPress"
        android:src="@drawable/submit_defense_button" />
 
    <TextView
        android:id="@+id/instructions_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/instructions_1"
        android:layout_below="@+id/instructions_1"
        android:layout_marginTop="25dp"
        android:text="*Note: Taking a picture with your face centered and straight will award you more points"
        android:textSize="15dp" />
 
    <TextView
        android:id="@+id/instructions_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/jpgview_p2_offense"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textSize="20dp" />
 
    <ImageView
        android:id="@+id/jpgview_p2_offense"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_below="@+id/player_1_defense"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@android:drawable/ic_menu_gallery" />
 
</RelativeLayout>
